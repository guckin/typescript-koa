{
  "name": "cruddy-cats",
  "version": "1.0.0",
  "description": "Node js koa rest api for cruddy cats",
  "author": "stephen mcguckin",
  "repository": {
    "type": "git",
    "url": "git://github.com/guckin/typescript-koa.git"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project tsconfig.json",
    "prebuild": "npm install",
    "clean": "rm -rf dist build",
    "start": "node dist/lib/server.js",
    "debug": "tsc-watch --onSuccess \"node --inspect=0.0.0.0:9222 build/dist/lib/server.js\"",
    "test": "nyc mocha \"build/dist/test/**/*.test.js\"",
    "only-test": "mocha --inspect-brk \"build/dist/test/**/*.test.js\""
  },
  "dependencies": {
    "async": "^2.6.1",
    "cors": "^2.8.5",
    "glob": "^7.1.3",
    "impress-router": "^1.6.0",
    "joi": "14.3.1",
    "jsonwebtoken": "^8.4.0",
    "jwks-rsa": "^1.4.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-cors": "0.0.16",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "newrelic": "^5.3.0",
    "pjson": "^1.0.9",
    "request": "^2.88.0",
    "source-map-support": "^0.5.10",
    "superagent": "^3.8.3"
  },
  "devDependencies": {
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "@types/async": "^2.4.1",
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.4",
    "@types/joi": "^13.4.4",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-compose": "^3.2.3",
    "@types/koa-router": "^7.0.39",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.30",
    "@types/request": "^2.48.1",
    "@types/superagent": "^3.8.7",
    "@types/supertest": "^2.0.7",
    "aws-sdk": "^2.416.0",
    "chai": "^4.2.0",
    "copyfiles": "^2.1.0",
    "mocha": "^5.2.0",
    "mocha-jenkins-reporter": "^0.4.1",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "supertest": "^3.4.2",
    "ts-node": "^8.0.2",
    "tsc-watch": "^1.1.39",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3",
    "uuid": "^3.3.2"
  },
  "nyc": {
    "include": [
      "build/dist/lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "cobertura"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./build/reports/coverage"
  },
  "files": [
    "config",
    "dist",
    "docs",
    "lib",
    "package.json"
  ]
}
