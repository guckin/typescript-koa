{
	"version": "0.2.0",
	"configurations": [
     {
       "type": "node",
       "request": "attach",
       "name": "Attach to Docker",
       "protocol": "inspector",
       "port": 9222,
       "restart": true,
       "localRoot": "${workspaceRoot}/",
       "remoteRoot": "/src",
       "outFiles": [
         "${workspaceFolder}/build/dist/**/*.js"
       ]
     },
     {
       "type": "node",
       "request": "launch",
       "name": "Launch in Docker",
       "runtimeExecutable": "npm",
       "runtimeArgs": [ "run", "compose:dev" ],
       "protocol": "inspector",
       "port": 9222,
       "restart": true,
       "timeout": 60000,
       "localRoot": "${workspaceRoot}/",
       "remoteRoot": "/src",
       "outFiles": [
         "${workspaceFolder}/build/dist/**/*.js"
       ],
       "console": "integratedTerminal",
       "internalConsoleOptions": "neverOpen"
     },
     {
       "type": "node",
       "request": "launch",
       "name": "Run UNIT Tests",
       "runtimeExecutable": "npm",
       "runtimeArgs": [ "run", "compose:test" ],
       "sourceMaps": true,
       "outFiles": [
         "${workspaceRoot}/build/dist/**/*.js"
       ],
       "internalConsoleOptions": "openOnSessionStart"
     }
	]
}
